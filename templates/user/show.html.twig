{% extends 'base.html.twig' %}

{% block title %}{{ user.name }}{% endblock %}

{% block body %}
<div class="d-flex justify-content-between">
    <h3>{{ user.name }}</h3>
    <a href="{{ path('app_user_index') }}" class="btn">Retour</a>
</div>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Mot de passe</th>
                <td>{{ user.password }}</td>
            </tr>
            <tr>
                <th>Pr√©nom</th>
                <td>{{ user.firstname }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ user.lastname }}</td>
            </tr>
            <tr>
                <th>Photo</th>
                <td>{{ user.image }}</td>
            </tr>
            <tr>
                <th>Secteur</th>
                <td>{{ user.secteur }}</td>
            </tr>
            <tr>
                <th>Contrat</th>
                <td>{{ user.contrat }}</td>
            </tr>
            <tr>
                <th>Sortie</th>
                <td>Sortie : {{ user.sortie|date('d-m-Y') }}</td>
            </tr>
        </tbody>
    </table>


        <div class="d-flex">
            <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-dark">Modifier</a>
            <div class="ms-2">
                {{ include('user/_delete_form.html.twig') }}
            </div>
        </div>


{% endblock %}
